---
import Header from '@/components/shared/Header.astro'
import Footer from '@/components/shared/Footer.astro'
import '@/styles/globals.css'
import ChatsWhatsapp from '@/components/shared/ChatsWhatsapp.astro'
import type { Preload } from '@/types/Preload'
import SEO from '@/components/shared/SEO.astro'
import { SITE } from 'astro:env/client'
interface Props {
	title: string
	description: string
	preload?: Array<Preload>
	canonical?: string
	image?: string
}
const { title, description, preload, canonical, image } = Astro.props


---

<!doctype html>
<html lang="es">
	<head>
		{SITE === 'https://cursoagenteinmobiliarioperu.com' && (
			<script is:inline >
			!(function (f, b, e, v, n, t, s) {
				if (f.fbq) return
				n = f.fbq = function () {
					n.callMethod ? n.callMethod.apply(n, arguments) : n.queue.push(arguments)
				}
				if (!f._fbq) f._fbq = n
				n.push = n
				n.loaded = !0
				n.version = '2.0'
				n.queue = []
				t = b.createElement(e)
				t.async = !0
				t.src = v
				s = b.getElementsByTagName(e)[0]
				s.parentNode.insertBefore(t, s)
			})(window, document, 'script', 'https://connect.facebook.net/en_US/fbevents.js')
			fbq('init', '4020995191452630')
			fbq('track', 'PageView')
		</script>	
		)}
		<SEO
			canonical={canonical}
			description={description}
			image={image}
			preload={preload}
			title={title}
		/>
	</head>
	<body>
		{
			SITE === "https://cursoagenteinmobiliarioperu.com" && <noscript
			><img
				height="1"
				width="1"
				style="display:none"
				src="https://www.facebook.com/tr?id=4020995191452630&ev=PageView&noscript=1"
			/></noscript
		>
		}
		
		<ChatsWhatsapp />
		<Header />
		<slot />
		<Footer />
		<script>
			import AOS from 'aos'
			import 'aos/dist/aos.css'
			AOS.init()
		</script>
	</body>
</html>
