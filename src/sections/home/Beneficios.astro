								<clipPath id="clip0_2119_9689">
									<rect width="84.2" height="49.7" fill="white"></rect>
								</clipPath>
							</defs>
						</svg>
					</div>
					<div class="space-y-1">
						<h2 class="text-lg font-medium md:text-xl">
							<i class="text-coral-500">¿INTERESADO</i> en nuestro curso?
						</h2>
						<p class="text-sm md:text-base">Solicita más información aquí mismo</p>
					</div>
				</div>
				<a
					href="#contacto"
					class="h-auto rounded-full bg-[#F79E8E] px-8 py-2 text-sm font-medium text-white hover:bg-[#f58d7a] md:text-base"
				>
					CONTÁCTANOS
				</a>
			</div>
		</div>
	</div>
</section>
<script>
	import Swiper from 'swiper'
	import { Navigation, Autoplay } from 'swiper/modules'
	import 'swiper/css'
	import 'swiper/css/navigation'
	new Swiper('.swiper-beneficios', {
		slidesPerView: 1,
		spaceBetween: 60,
		navigation: {
			nextEl: '.swiper-navigation-next',
			prevEl: '.swiper-navigation-prev'
		},
		autoplay: {
			delay: 2000,
			disableOnInteraction: true
		},
		modules: [Navigation, Autoplay],
		breakpoints: {
			1024: {
				slidesPerView: 2
			},
			1280: {
				slidesPerView: 3
			}
		}
	})
</script>
