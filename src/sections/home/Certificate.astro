import { OptimizeImage } from '@/components/shared/OptimizeImage'
---

<section class="container">
	<div class="mx-auto flex max-w-[900px] flex-col items-center gap-6 md:flex-row md:gap-0">
		<div class="text-[18px] font-bold lg:text-[21px]">
			<p class="text-semi-dark-blue">
				<span class="text-[30px]">CERTIFÍCATE</span>
				<br /> y obtén tu registro como
			</p>
			<div
				class="mt-4 rounded-[50px] bg-lime-green px-[31px] py-[12px] text-semi-dark-blue md:rounded-[50px_0_0_50px]"
			>
				AGENTE INMOBILIARIO
			</div>
			<div class="mt-4 flex items-center gap-4 text-[18px] text-semi-dark-blue">
				<p>ante el</p>
				<OptimizeImage
					stylesPicture="max-w-[300px]"
					srcMobile="/home/mobile/logo-ministerio-mobile.webp"
					srcTablet="/home/tablet/logo-ministerio-tablet.webp"
					srcDesktop="/home/desktop/logo-ministerio-desktop.webp"
					alt="Logo Ministerio"
				/>
			</div>
		</div>
		<OptimizeImage
			stylesPicture="max-w-[500px]"
			srcMobile="/home/mobile/ejecutivo-mobile.webp"
