---
import { HorarioIcon } from '@/components/icons/HorarioIcon'
import { UbicacionIcon } from '@/components/icons/UbicacionIcon'
---

<section
	class="bg-[url(/img/home/mobile/personas-clase-mobile.webp)] bg-cover bg-no-repeat py-[45px] [background-position:bottom] md:bg-[url(/img/home/tablet/personas-clase-tablet.webp)] md:py-[85px] xl:bg-[url(/img/home/desktop/personas-clase-desktop.webp)]"
	id="turno"
>
	<div class="container flex flex-col items-center gap-8">
		<div class="space-y-2 text-center">
			<h2 class="text-center text-[18px] font-semibold text-white sm:text-[25px]">
				CLASES PRESENCIALES
			</h2>
			<hr class="h-[3px] w-full bg-white" />
			<p class="text-4xl font-medium text-light-mustard">Inicio: 12 DE AGOSTO</p>
		</div>
		<div
			class="mx-auto flex max-w-[600px] flex-col items-center gap-4 rounded-xl bg-[#00386B] px-12 py-4 text-white sm:flex-row"
		>
			<UbicacionIcon className="flex-none text-[48px] text-light-mustard" />
			<p class="text-center">
				Av. Benavides 4828: oficina N° 502 Urbanización Las Gardenias - Santiago de Surco provincia
				y departamento de Lima
			</p>
		</div>
		<div class="flex flex-wrap justify-center gap-10">
			<div class="text-white">
				<div class="flex gap-[15px] sm:gap-[30px]">
					<HorarioIcon className="text-[71px]" />
					<div class="h-[90px] w-[4px] bg-white"></div>
					<div>
						<strong class="text-2xl">Turno noche</strong>
						<p>Lunes a Viernes</p>
						<p>6:00 P.M. a 10:00 P.M.</p>
					</div>
				</div>
				<p class="mt-4 text-center font-semibold">Duración: 2 meses y medio aprox.</p>
			</div>
			<div class="text-white">
				<div class="flex gap-[15px] sm:gap-[30px]">
					<HorarioIcon className="text-[71px]" />
					<div class="h-[90px] w-[4px] bg-white"></div>
					<div>
						<strong class="text-2xl">Turno mañana</strong>
						<p>Lunes, Miércoles y Viernes</p>
						<p>9:00 A.M. a 1:00 P.M.</p>
					</div>
				</div>
				<p class="mt-4 text-center font-semibold">Duración: 4 meses aprox.</p>
			</div>
		</div>
	</div>
</section>
